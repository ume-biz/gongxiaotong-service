<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="application.properties"></properties>
	
	<settings>
		<setting name="cacheEnabled" value="false"/>
        <setting name="jdbcTypeForNull" value="NULL" />
	</settings>

	<typeHandlers>
		<typeHandler javaType="java.sql.Blob" handler="org.umeframework.dora.dao.lob.ex.BlobTypeHandler"/>
		<typeHandler javaType="java.sql.Clob" handler="org.umeframework.dora.dao.lob.ex.ClobTypeHandler"/>
	</typeHandlers>

	<mappers>
	    <!-- Customized Query SQL mapping -->
        <mapper resource="${ume.sqlMapFile.location}/@AUTH.xml" />
        <mapper resource="${ume.sqlMapFile.location}/@QUERY.xml" />
        
        <!-- UAC Table SQL mapping -->
        <mapper resource="${ume.sqlMapFile.location}/UME_RESOURCE.xml" />
        <mapper resource="${ume.sqlMapFile.location}/UME_ROLE.xml" />
        <mapper resource="${ume.sqlMapFile.location}/UME_ROLE_ACL.xml" />
        <mapper resource="${ume.sqlMapFile.location}/UME_USER.xml" />
        <mapper resource="${ume.sqlMapFile.location}/UME_USER_ROLE.xml" />
        
	</mappers>

</configuration>
